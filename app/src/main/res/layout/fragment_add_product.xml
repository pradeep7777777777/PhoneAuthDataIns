<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddProductFragment">

    <TextView
        android:id="@+id/textheding"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Product"
        android:background="@drawable/faagmentaddproduct"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20dp"
        android:gravity="center"
        />

    <ImageView
        android:id="@+id/productimage"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_below="@id/textheding"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputlayouttittle"
        android:layout_below="@id/productimage"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        >
        <EditText
            android:id="@+id/producttittle"
            android:hint="Tittle"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputlayoutprice"
        android:layout_below="@id/inputlayouttittle"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        >
        <EditText
            android:id="@+id/productprice"
            android:hint="Price"
            android:inputType="number"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputlayout"
        android:layout_below="@id/inputlayoutprice"
        android:layout_width="300dp"
        android:layout_height="110dp"
        android:layout_marginLeft="30dp"
        >
        <EditText
            android:id="@+id/productdescription"
            android:hint="Description"
            android:layout_width="300dp"
            android:layout_height="100dp"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/productgallery"
        android:layout_below="@id/inputlayout"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:textSize="15dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#1FC7F1"
        android:textStyle="bold"
        android:text="Gallery"
        />

    <Button
        android:id="@+id/productcamera"
        android:layout_below="@id/inputlayout"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:textSize="15dp"
        android:backgroundTint="#1FC7F1"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:text="Camera"
        />

    <Button
        android:id="@+id/productinsert"
        android:layout_below="@id/productgallery"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textSize="15dp"
        android:backgroundTint="#1F4DF1"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:text="Upload"
        />

</RelativeLayout>