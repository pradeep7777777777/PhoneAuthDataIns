<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/signuptop"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="60dp"
            android:text="UPDATE NOW"
            android:textColor="#F6EB1A"
            android:textSize="25sp"
            android:textStyle="bold"/>
    </LinearLayout>


    <ImageView
        android:id="@+id/img"
        android:layout_marginTop="145dp"
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:layout_marginLeft="120dp"
        android:src="@drawable/profileuser"
        />


    <EditText
        android:id="@+id/updatename"
        android:textColor="@color/black"
        android:layout_below="@id/img"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:hint="Enter your name"
        />

    <EditText
        android:id="@+id/updateemail"
        android:textColor="@color/black"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:hint="Enter your email"
        android:layout_below="@id/updatename"
        />

    <EditText
        android:id="@+id/updateage"
        android:layout_width="300dp"
        android:textColor="@color/black"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:hint="Enter your age"
        android:layout_below="@id/updateemail"
        />

    <EditText
        android:id="@+id/updatecity"
        android:layout_width="300dp"
        android:textColor="@color/black"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:hint="Enter your city"
        android:layout_below="@id/updateage"
        />

    <Button
        android:id="@+id/update"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="80dp"
        android:textStyle="bold"
        android:text="UPDATE"
        android:layout_below="@id/updatecity"
        android:backgroundTint="#3ACA12"
        />

    <TextView
        android:layout_below="@id/update"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/sugnupbut"
        />



</RelativeLayout>